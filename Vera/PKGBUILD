# Maintainer: Solomon Choina <shlomochoina@gmail.com>
pkgname=vera-xsettings-git
_pkgname-vera-xsettings
pkgver=
pkgrel=1
epoch=
pkgdesc="a reference of the xsettings spec made for vera-desktop-environment"
arch=(x86_64' 'i686')
url="https://github.com/vera-desktop/vera-xsettings"
license=('GPL2.1')
depends=(vala)
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=(vera-xsettings::git+https://github.com/vera-desktop/vera-xsettings.git)
sha256sums=()

pkgver() {
  cd "$_pkgname"
  git describe --long | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
  }
build() {
    cd "vera-xsettings"
    bake
}

package() {
    cd "vera-xsettings"
    bake install
}
